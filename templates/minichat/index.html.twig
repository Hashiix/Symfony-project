{% extends 'base.html.twig' %}

{% block body %}

    {% form_theme chatForm 'bootstrap_4_layout.html.twig' %}

    {{ form_start(chatForm) }}

    {{ form_row(chatForm.name, {'attr': {'placeholder': "Votre pseudo"}, 'label': "Pseudo"}) }}
    {{ form_row(chatForm.message, {'attr': {'placeholder': "Votre message", 'rows': 5, 'cols': 60}}) }}

    <div id="submit">
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </div>
    {{ form_end(chatForm) }}

    <div id="minichat">
        {% for message in messages %}
            {{ message.date|date('d-m-Y H:i') }} - <strong>{{ message.name }} :</strong> {{ message.message|escape('html') }}<br/>
        {% else %}
            Il n'y a aucun message pour l'instant, soyez le premier à en écrire un.
        {% endfor %}
    </div>

    <form>
            <input type="submit" class="btn btn-primary" value="Rafraichir">
    </form>

{% endblock %}