{% extends 'base.html.twig' %}

{% block body %}

    <a id="backdecoration" href="{{ path('app_blog_index') }}">⬅ Revenir au blog</a>

    <div id="articles">
        <div id="article">
            <p><strong>{{ article.title }} - {{ article.date|date('d-m-Y H:i') }}</strong></p><br/>
            <p>{{ article.content }}</p> <br/>
        </div>
    </div>

    <div id="comments">
        <h2><strong>Commentaires</strong></h2>
        {% for comment in comments %}
            <div id="comment">
                <p><strong>{{ comment.author }} - {{ article.date|date('d-m-Y H:i') }}</strong></p><br/>
                <p>{{ comment.comment }}</p> <br/>
            </div>
        {% else %}
            <p>Il n'y a aucun commentaire pour le moment, soyez le premier à en écrire un !</p>
        {% endfor %}
    </div>

    {% form_theme commentForm 'bootstrap_4_layout.html.twig' %}

    {{ form_start(commentForm) }}

    {{ form_row(commentForm.author, {'attr': {'placeholder': "Votre pseudo"}, 'label': "Pseudo"}) }}
    {{ form_row(commentForm.comment, {'attr': {'placeholder': "Votre commentaire", 'rows': 5, 'cols': 60}, 'label': "Commentaire"}) }}

    <div id="submit">
        <button type="submit" class="btn btn-info">Envoyer</button>
    </div>
    {{ form_end(commentForm) }}

{% endblock %}