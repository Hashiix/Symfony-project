{% extends 'base.html.twig' %}

{% block body %}

    <h1>Mon super blog !</h1>

    <div id="articles">

        {% for article in articles %}
            <div id="article">
                {{ article.title }} - {{ article.date|date('d-m-Y H:i') }} <br/>
                {{ article.content }} <br/>
                <a href="{{ path('app_blog_comments') }}">Commentaires</a>
            </div>
        {% endfor %}

    </div>

{% endblock %}