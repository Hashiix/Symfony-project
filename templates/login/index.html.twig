{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login_login') }}" method="post">
        <div class="form-group">
            Pseudo
            <input placeholder="Votre pseudo" required name="_username"
            type="text" class="form-control" value="{{ last_username }}">
        </div>
        <div class="form-group">
            Mot de passe
            <input placeholder="Votre mot de passe" required name="_password"
            type="password" class="form-control">
        </div>

        <div id="submit">
            <button type="submit" class="btn btn-info">Connexion</button>
        </div>

    </form>

